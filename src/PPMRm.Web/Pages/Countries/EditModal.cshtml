@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model PPMRm.Web.Pages.Countries.EditModalModel
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Country" asp-page="/Countries/EditModal">
    <abp-modal size="Large" scrollable="true">
        <abp-modal-header title="Edit Country: @{@Model.Country.Name}"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>