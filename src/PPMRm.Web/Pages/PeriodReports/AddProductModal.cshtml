@page
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model PPMRm.Web.Pages.PeriodReports.AddProductModalModel
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Product" asp-page="/PeriodReports/AddProductModal">
    <abp-modal size="Large" scrollable="true">
        <abp-modal-header title="Add Product"></abp-modal-header>
        <abp-modal-body>
            <abp-select asp-for="@Model.ProgramId" asp-items="@Model.Programs" disabled="true" />
            <abp-select asp-for="@Model.Id" asp-items="@Model.Products" />
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>