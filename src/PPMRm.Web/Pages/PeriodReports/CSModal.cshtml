@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model PPMRm.Web.Pages.PeriodReports.CSModalModel
@{
    Layout = null;
}

<abp-dynamic-form abp-model="CSUpdates" asp-page="/PeriodReports/CSModal" data-check-form-on-close="false">
    <abp-modal scrollable="true" size="Large">
        <abp-modal-header title="CS Updates - @Model.Title"></abp-modal-header>
        <abp-modal-body>
            <fieldset @(Model.IsReadonly ? "disabled" : "")>
                <abp-input asp-for="Id" />
                <abp-form-content abp-model="@Model.CSUpdates" />
            </fieldset>
        </abp-modal-body>
        <abp-modal-footer buttons="@(!Model.IsReadonly ? AbpModalButtons.Cancel|AbpModalButtons.Save : AbpModalButtons.Close)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
