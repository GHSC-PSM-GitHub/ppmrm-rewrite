@page
@model PPMRm.Web.Pages.Orders.IndexModel
@{
}
@section styles{
   <style type="text/css">
    li.multiselect-item {
        text-align: left;
    }    
   </style>
}
@section scripts
{
    <abp-script src="/Pages/Orders/Index.js" />
    <abp-script src="/js/bootstrap-multiselect.min.js" />
    <abp-script src="/js/dataTables.buttons.min.js" />
}
<abp-card>
    <abp-card-header>
        <h2>ARTMIS Orders (Snapshot Dec 2021)</h2>
        <div class="container">
          <div class="row">
            <div class="col-sm">
         <abp-select asp-for="@Model.SelectedCountries" asp-items="@Model.Countries" />
            </div>
            <div class="col-sm">
         <abp-select asp-for="@Model.SelectedProducts" asp-items="@Model.Products" />
            </div>
          </div>
        </div>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="OrdersTable"></abp-table>
    </abp-card-body>
</abp-card>